<Window x:Class="CIS.SuggestGenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CIS"
        Title="SuggestGenre" Height="150" Width="400"
        DataContext="SuggestGenre" >
    <Grid>
        <Label Content="Genre name:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="126" Margin="0,1,0,0" FontSize="20" Height="39" />
        <TextBox Height="36" HorizontalAlignment="Left" Margin="126,4,0,0" x:Name="GenreNameBox" VerticalAlignment="Top" Width="256" FontSize="20" MaxLines="1" TabIndex="0" />
        <Button x:Name="SuggestGenreBtn" Content="Suggest" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="262" Height="46" FontSize="20" Click="SuggestGenreBtn_Click" TabIndex="1"/>
        <Button x:Name="CancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="277,63,0,0" VerticalAlignment="Top" Width="105" Height="46" FontSize="20" Click="CancelBtn_Click" TabIndex="2"/>

    </Grid>
</Window>
