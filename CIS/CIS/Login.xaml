<Window x:Class="CIS.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="170" Width="410">
    <Grid>
        <TextBox x:Name="EmailBox" HorizontalAlignment="Left" Height="23" Margin="81,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="301" FontSize="14"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="23" Margin="81,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="301" FontSize="14"/>
        <Button x:Name="LoginBtn" Content="Login" HorizontalAlignment="Left" Margin="81,97,0,0" VerticalAlignment="Top" Width="301" Click="LoginBtn_Click" FontSize="14"/>
        <Label x:Name="InfoLabel" Content="Enter your email and password to see suggestions" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="CancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Width="62" Click="CancelBtn_Click" FontSize="14"/>

    </Grid>
</Window>
